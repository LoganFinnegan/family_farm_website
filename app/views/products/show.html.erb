<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <% if @product.image.attached? %>
          <%= image_tag @product.image.variant(resize_to_fill: [800, 400]),
                        class: "card-img-top rounded-top",
                        style: "object-fit: cover;" %>
        <% else %>
          <%= image_tag "https://via.placeholder.com/800x400?text=Product+Image",
                        class: "card-img-top rounded-top",
                        style: "object-fit: cover;" %>
        <% end %>

        <div class="card-body">
          <h1 class="card-title mb-3"><%= @product.name %></h1>
          <p class="card-text"><%= simple_format(@product.description) %></p>
          <p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
          <p>
            <% if @product.in_stock? %>
              <span class="badge bg-success">In Stock</span>
            <% else %>
              <span class="badge bg-danger">Out of Stock</span>
            <% end %>
          </p>
        </div>

        <div class="card-footer text-muted text-center">
          <%= link_to "Back to Products", products_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
