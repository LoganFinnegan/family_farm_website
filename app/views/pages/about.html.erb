<!-- app/views/pages/about.html.erb -->
<section class="py-5 bg-light">
  <div class="container">
    <h1 class="mb-4 text-center"><%= @content&.title.presence || "About Finnegan Farms" %></h1>
    <p class="lead text-center mb-5">
      <%= @content&.subtitle.presence || "For generations, our family has worked this land with passion and care, blending tradition with sustainable farming practices." %>
    </p>

    <div class="row">
      <div class="col-md-6 mb-4">
        <%= image_tag "https://picsum.photos/600/400", class: "img-fluid rounded shadow" %>
      </div>
      <div class="col-md-6">
        <h3>Our Story</h3>
        <p>
          From raising cattle to growing crops, Finnegan Farms has been rooted in the community for decades.
          Today we continue that legacy by providing fresh food, memorable events, and a warm connection to the land.
        </p>
      </div>
    </div>
  </div>
</section>