<div class="container mt-5">
  <h1 class="mb-4 text-center">Admin Dashboard</h1>

  <div class="row">
    <!-- Events -->
    <div class="col-md-4 mb-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="bi bi-calendar-event display-4 mb-3"></i>
          <h5 class="card-title">Manage Events</h5>
          <p class="card-text"><%= @events_count %> events</p>
          <%= link_to "View Events", admin_events_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <!-- Products -->
    <div class="col-md-4 mb-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="bi bi-box-seam display-4 mb-3"></i>
          <h5 class="card-title">Manage Products</h5>
          <p class="card-text"><%= @products_count %> products</p>
          <%= link_to "View Products", admin_products_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>

    <!-- Users -->
    <div class="col-md-4 mb-4">
      <div class="card text-center shadow-sm">
        <div class="card-body">
          <i class="bi bi-people display-4 mb-3"></i>
          <h5 class="card-title">Manage Users</h5>
          <p class="card-text"><%= @users_count %> users</p>
          <%= link_to "Coming Soon", "#", class: "btn btn-secondary disabled" %>
        </div>
      </div>
    </div>
  </div>
</div>

