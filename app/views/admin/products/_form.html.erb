<%= form_with(model: [:admin, @product], local: true, html: { multipart: true, class: "needs-validation" }) do |form| %>
  <% if @product.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h4>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 4 %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :price, class: "form-label" %>
      <%= form.number_field :price, step: 0.01, class: "form-control" %>
    </div>
    <div class="col-md-6 mb-3">
      <%= form.label :stock, class: "form-label" %>
      <%= form.number_field :stock, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
    <% if @product.image.attached? %>
      <div class="mt-2">
        <p>Current image:</p>
        <%= image_tag @product.image.variant(resize_to_limit: [200, 200]), class: "img-thumbnail" %>
      </div>
    <% end %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_products_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>
