<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <% if @product.image.attached? %>
          <%= image_tag @product.image.variant(resize_to_limit: [600, 400]),
                        class: "card-img-top rounded-top" %>
        <% else %>
          <%= image_tag "https://via.placeholder.com/600x400?text=No+Image",
                        class: "card-img-top rounded-top" %>
        <% end %>

        <div class="card-body">
          <h1 class="card-title mb-3"><%= @product.name %></h1>

          <p class="card-text"><%= simple_format(@product.description) %></p>
          <p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
          <p>
            <% if @product.stock > 0 %>
              <span class="badge bg-success">In Stock: <%= @product.stock %></span>
            <% else %>
              <span class="badge bg-danger">Out of Stock</span>
            <% end %>
          </p>
        </div>

        <div class="card-footer text-center">
          <%= link_to "Edit", edit_admin_product_path(@product), class: "btn btn-warning me-2" %>
          <%= link_to "Back", admin_products_path, class: "btn btn-outline-secondary" %>
        </div>
