<%= form_with(model: [:admin, @event], local: true, html: { multipart: true, class: "needs-validation" }) do |form| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
      <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title -->
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <!-- Description -->
  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 4 %>
  </div>

  <!-- Date & Location -->
  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :date, "Date & Time", class: "form-label" %>
      <%= form.datetime_select :date,
            discard_seconds: true,
            class: "form-control" %>
    </div>
    <div class="col-md-6 mb-3">
      <%= form.label :location, class: "form-label" %>
      <%= form.text_field :location, class: "form-control" %>
    </div>
  </div>

  <!-- Cost -->
  <div class="mb-3">
    <%= form.label :cost, class: "form-label" %>
    <%= form.text_field :cost, class: "form-control" %>
  </div>

  <!-- Flyer Upload -->
  <div class="mb-3">
    <%= form.label :flyer, class: "form-label" %>
    <%= form.file_field :flyer, class: "form-control" %>
    <% if @event.flyer.attached? %>
      <div class="mt-2">
        <p>Current flyer:</p>
        <%= image_tag @event.flyer.variant(resize_to_limit: [200, 200]), class: "img-thumbnail" %>
      </div>
    <% end %>
  </div>

  <!-- Submit / Cancel -->
  <div>
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_events_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>
