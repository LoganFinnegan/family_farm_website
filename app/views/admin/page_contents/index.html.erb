<h1 class="mb-4">Pages</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
      <tr>
        <th class="text-center">Image</th>
        <th>Page</th>
        <th>Headline</th>
        <th>Updated</th>
        <th class="text-end">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @page_contents.each do |pc| %>
        <tr>
          <td class="text-center">
            <% if pc.hero_image&.attached? %>
              <%= image_tag pc.hero_image.variant(resize_to_fill: [100, 100]),
                            class: "img-thumbnail",
                            style: "object-fit: cover; width: 100px; height: 100px;" %>
            <% else %>
              <div class="bg-light d-flex align-items-center justify-content-center"
                   style="width: 100px; height: 100px;">
                <span class="text-muted">No image</span>
              </div>
            <% end %>
          </td>
          <td>
            <strong><%= pretty_page_name(pc) %></strong>
            <!-- If you REALLY don’t want to ever show the slug, remove this muted line -->
            <!-- <div class="text-muted small"><code><%= pc.slug %></code></div> -->
          </td>
          <td><%= pc.title.presence || "—" %></td>
          <td><%= l(pc.updated_at, format: :short) %></td>
          <td class="text-end">
            <div class="btn-group" role="group">
              <%= link_to "Edit", edit_admin_page_content_path(pc), class: "btn btn-sm btn-warning" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>