<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <% if @event.flyer.attached? %>
          <%= image_tag @event.flyer.variant(resize_to_fill: [800, 400]),
                        class: "card-img-top rounded-top",
                        style: "object-fit: cover;" %>
        <% else %>
          <%= image_tag "https://via.placeholder.com/800x400?text=Event+Flyer",
                        class: "card-img-top rounded-top",
                        style: "object-fit: cover;" %>
        <% end %>

        <div class="card-body">
          <h1 class="card-title mb-3"><%= @event.title %></h1>
          <p class="card-text">
            <strong>Date:</strong> <%= @event.date.strftime("%B %d, %Y %I:%M %p") if @event.date %><br>
            <strong>Location:</strong> <%= @event.location %><br>
            <strong>Cost:</strong> <%= @event.cost %>
          </p>

          <hr>

          <p class="card-text"><%= simple_format(@event.description) %></p>
        </div>

        <div class="card-footer text-muted text-center">
          <%= link_to "Back to Events", events_path, class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
